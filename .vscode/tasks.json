            "command": "${workspaceFolder}/sources/bitbake/bin/bitbake-setup --setting default registry ${workspaceFolder} --setting default top-dir-prefix ${workspaceFolder}/.. --setting default top-dir-name ${workspaceFolderBasename} init --non-interactive sanctum-local openembedded-test machine/qemux86-64 distro/sanctum-test",
