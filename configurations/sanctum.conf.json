{
    "description": "Sanctum - 'core image minimal' configuration",
    "sources": {
        "bitbake": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "https://git.openembedded.org/bitbake;protocol=https"
                    }
                },
                "branch": "master",
                "rev": "master"
            },
            "path": "../../sources/bitbake"
        },
        "openembedded-core": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "https://git.openembedded.org/openembedded-core;protocol=https"
                    }
                },
                "branch": "master",
                "rev": "master"
            },
            "path": "../../sources/openembedded-core"
        },
        "meta-yocto": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "https://git.yoctoproject.org/meta-yocto;protocol=https"
                    }
                },
                "branch": "master",
                "rev": "master"
            },
            "path": "../../sources/meta-yocto"
        },
        "meta-openembedded": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "https://git.openembedded.org/meta-openembedded;protocol=https"
                    }
                },
                "branch": "master",
                "rev": "master"
            },
            "path": "../../sources/meta-openembedded"
        },
        "meta-rauc": {
            "git-remote": {
                "remotes": {
                    "origin": {
                        "uri": "https://github.com/rauc/meta-rauc.git;protocol=https"
                    }
                },
                "branch": "master",
                "rev": "master"
            },
            "path": "../../sources/meta-rauc"
        }
    },
    "bitbake-setup": {
        "configurations": [
            {
                "bb-layers": [
                    "../../meta-sanctum",
                    "../../sources/meta-rauc",
                    "../../sources/meta-openembedded/meta-oe",
                    "../../sources/openembedded-core/meta"
                ],
                "oe-fragments": [
                    "meta-sanctum/testing/rauc-qemu-testing",
                    "core/yocto/root-login-with-empty-password"
                ],
                "oe-fragments-one-of": {
                    "machine": {
                        "description": "Target machines",
                        "options": [
                            "machine/qemux86-64n"
                        ]
                    },
                    "distro": {
                        "description": "Distribution configuration variant",
                        "options": [
                            "distro/sanctum-dev",
                            "distro/sanctum-test",
                            "distro/sanctum"
                        ]
                    }
                },
                "name": "sanctum",
                "description": "Sanctum Build Configuration",
                "setup-dir-name": "build-sanctum"
            }
        ]
    },
    "version": "1.0"
}