[Unit]
Description=Start a chromium browser
After=weston.service homeassistant.service
Requires=weston.service homeassistant.service

[Service]
Type=simple
User=weston
Group=weston
PAMName=login
Environment=WAYLAND_DISPLAY=/run/user/1000/wayland-1
Environment=XDG_RUNTIME_DIR=/run/user/1000
ExecStartPre=/bin/sleep 5
ExecStart=/usr/bin/chromium @@URL@@ --force-dark-mode --enable-wayland-ime --enable-logging=stderr --kiosk
#Restart=on-failure
#RestartSec=1

[Install]
WantedBy=graphical.target